<UserControl x:Class="WPFProject.View.UserControl.TextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPFProject.View.UserControl"
             mc:Ignorable="d"
             d:DesignHeight="40" d:DesignWidth="250">
    <Grid>
        <TextBox Name="TextInput" VerticalContentAlignment="Center" FontSize="16" FontWeight="Light"></TextBox>
        <TextBlock Name="TextBoxPlaceholder" Text="Hello" VerticalAlignment="Center" FontSize="16" FontWeight="Light"
                   Foreground="DarkGray" Margin="5, 0, 0, 0"></TextBlock>
        <Button Name="ButtonClear" Width="30" HorizontalAlignment="Right" Content="X" Background="Transparent" Foreground="Red"
                BorderThickness="0"></Button>
    </Grid>
</UserControl>
