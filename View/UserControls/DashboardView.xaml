<UserControl x:Class="WPFProject.View.UserControls.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPFProject.View.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0, 0, 0, 10">
            <TextBlock Text="Dashboard" FontSize="28" FontWeight="Bold" Margin="0, 0, 10, 10"
                       FontFamily="jetbrains mono"></TextBlock>
            <Button Name="NewTaskButton" Content="+ New Task" Click="NewTaskButton_OnClick"
                    Margin="350, 0, 0, 10" Width="80"></Button>
        </StackPanel>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0, 0, 0, 20">
            <TextBlock Text="Overview" FontSize="20" FontWeight="SemiBold" FontFamily="jetbrains mono"></TextBlock>
        </StackPanel>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0, 0, 0, 20">
            <Border BorderBrush="#dcdcdc" BorderThickness="1" CornerRadius="5" Padding="10"
                    Margin="0, 0, 15, 0" Width="150" Height="80">
                <StackPanel>
                    <TextBlock Text="Tasks Due Today" FontSize="12" Foreground="Gray"></TextBlock>
                    <TextBlock Name="TasksDueTodayTextBlock" FontSize="24" FontWeight="Bold" Margin="0, 5, 0, 0"></TextBlock>
                </StackPanel>
            </Border>
            
            <Border BorderBrush="#dcdcdc" BorderThickness="1" CornerRadius="5" Padding="10"
                    Margin="0, 0, 15, 0" Width="150" Height="80">
                <StackPanel>
                    <TextBlock Text="Overdue Tasks" FontSize="12" Foreground="Gray"></TextBlock>
                    <TextBlock Name="OverdueTasksTextBlock" FontSize="24" FontWeight="Bold" Margin="0, 5, 0, 0"></TextBlock>
                </StackPanel>
            </Border>
            
            <Border BorderBrush="#dcdcdc" BorderThickness="1" CornerRadius="5" Padding="10"
                    Margin="0, 0, 15, 0" Width="150" Height="80">
                <StackPanel>
                    <TextBlock Text="Completed Today" FontSize="12" Foreground="Gray"></TextBlock>
                    <TextBlock Name="CompletedTodayTextBlock" FontSize="24" FontWeight="Bold" Margin="0, 5, 0, 0"></TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
        
        <TextBlock Grid.Row="3" Text="Upcoming Tasks" FontSize="20" FontWeight="SemiBold" Margin="0, 0, 0, 10"
                   FontFamily="jetbrains mono"></TextBlock>
        
        <ListView Name="UpcomingTaskListView" Grid.Row="4">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="14"></TextBlock>
                        <TextBlock Text="{Binding ProjectName}" Foreground="Gray" FontSize="12"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        <TextBlock Grid.Row="5" Text="Overdue Tasks" FontSize="20" FontWeight="SemiBold" Margin="0, 20, 0, 10"></TextBlock>
        
        <ListView Name="OverdueTaskListView" Grid.Row="6">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="14"></TextBlock>
                        <TextBlock Text="{Binding ProjectName}" Foreground="Gray" FontSize="12"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
