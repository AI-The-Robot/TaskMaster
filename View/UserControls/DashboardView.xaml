<UserControl x:Class="TaskMaster.View.UserControls.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TaskMaster.View.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800" Background="Transparent">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0, 0, 0, 10">
            <TextBlock Text="Dashboard" FontSize="28" FontWeight="Bold" Margin="0, 0, 10, 10"
                       Foreground="White"></TextBlock>
            <Button Name="NewTaskButton" Content="+ New Task" Click="NewTaskButton_OnClick"
                    Margin="370, 0, 0, 10" Style="{StaticResource NavButton}"
                    Background="Blue"></Button>
        </StackPanel>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0, 0, 0, 20">
            <TextBlock Text="Overview" FontSize="20" FontWeight="SemiBold" Foreground="White"></TextBlock>
        </StackPanel>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0, 0, 0, 20">
            <Border BorderBrush="White" BorderThickness="1" CornerRadius="5" Padding="10"
                    Margin="0, 0, 15, 0" Width="150" Height="80">
                <StackPanel>
                    <Rectangle Fill="Red" Width="30" Height="5" HorizontalAlignment="Left"/>
                    <TextBlock Text="Overdue Tasks" FontSize="12" Foreground="White" FontWeight="SemiBold"></TextBlock>
                    <TextBlock Name="OverdueTasksTextBlock" FontSize="24" FontWeight="Bold" Margin="0, 5, 0, 0" Foreground="White"></TextBlock>
                </StackPanel>
            </Border>

            <Border BorderBrush="White" BorderThickness="1" CornerRadius="5" Padding="10"
                    Margin="0, 0, 15, 0" Width="150" Height="80">
                <StackPanel>
                    <Rectangle Fill="Yellow" Width="30" Height="5" HorizontalAlignment="Left"/>
                    <TextBlock Text="Tasks Due Today" FontSize="12" Foreground="White" FontWeight="SemiBold"></TextBlock>
                    <TextBlock Name="TasksDueTodayTextBlock" FontSize="24" FontWeight="Bold" Margin="0, 5, 0, 0"
                               Foreground="White"></TextBlock>
                </StackPanel>
            </Border>

            <Border BorderBrush="White" BorderThickness="1" CornerRadius="5" Padding="10"
                    Margin="0, 0, 15, 0" Width="150" Height="80">
                <StackPanel>
                    <Rectangle Fill="Green" Width="30" Height="5" HorizontalAlignment="Left"/>
                    <TextBlock Text="Completed Today" FontSize="12" Foreground="White" FontWeight="SemiBold"></TextBlock>
                    <TextBlock Name="CompletedTodayTextBlock" FontSize="24" FontWeight="Bold" Margin="0, 5, 0, 0"
                               Foreground="White"></TextBlock>
                </StackPanel>
            </Border>

            <Border BorderBrush="White" BorderThickness="1" CornerRadius="5" Padding="10"
                    Margin="0, 0, 15, 0" Width="150" Height="80">
                <StackPanel>
                    <Rectangle Fill="Blue" Width="30" Height="5" HorizontalAlignment="Left"/>

                    <TextBlock Text="Upcoming Tasks" FontSize="12" Foreground="White" FontWeight="SemiBold"></TextBlock>
                    <TextBlock Name="UpcomingTasksTextBlock" FontSize="24" FontWeight="Bold" Margin="0, 5, 0, 0"
                               Foreground="White"></TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
        
        <TextBlock Grid.Row="3" Text="Upcoming Tasks" FontSize="20" FontWeight="SemiBold" Margin="0, 0, 0, 10"
                   Foreground="White"></TextBlock>
        
        <ListView Name="UpcomingTaskListView" Grid.Row="4" BorderBrush="#dcdcdc" BorderThickness="0"
                  Background="#2c2c2c">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <DockPanel>
                        <CheckBox IsChecked="{Binding IsCompleted}" VerticalAlignment="Center"
                                  Margin="0, 0, 10, 0" Checked="ToggleButton_OnChecked"
                                  Unchecked="ToggleButton_OnUnchecked"></CheckBox>
                        <StackPanel>
                            <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="14"
                                       Name="TitleTextBlock" Foreground="White"></TextBlock>
                            <TextBlock Text="{Binding ProjectName}" Foreground="Wheat" FontSize="12"
                                       Name="ProjectTextBlock"></TextBlock>
                        </StackPanel>
                    </DockPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        <TextBlock Grid.Row="5" Text="Overdue Tasks" FontSize="20" FontWeight="SemiBold" Margin="0, 20, 0, 10"
                   Foreground="White"></TextBlock>
        
        <ListView Name="OverdueTaskListView" Grid.Row="6" BorderBrush="#dcdcdc" BorderThickness="0"
                  Background="#2c2c2c">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <DockPanel>
                        <CheckBox IsChecked="{Binding IsCompleted}" VerticalAlignment="Center"
                                  Margin="0, 0, 10, 0" Checked="ToggleButton_OnChecked"
                                  Unchecked="ToggleButton_OnUnchecked"></CheckBox>
                        <StackPanel>
                            <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="14"
                                       Foreground="White"></TextBlock>
                            <TextBlock Text="{Binding ProjectName}" Foreground="Wheat" FontSize="12"></TextBlock>
                        </StackPanel>
                    </DockPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
