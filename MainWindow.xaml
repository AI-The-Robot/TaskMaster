<Window x:Class="WPFProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFProject"
        mc:Ignorable="d"
        Title="TaskMaster" Height="600" Width="950"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <StackPanel Background="#f0f2f5" Margin="10">
            <TextBlock Text="TaskMaster" FontSize="25" FontWeight="Bold" FontFamily="jetbrains mono regular"
                       Margin="0, 10, 0, 30" HorizontalAlignment="Center"></TextBlock>
            <Button Name="DashboardButton" Content="Dashboard" Click="DashboardButton_OnClick"></Button>
            <Button Name="TasksButton" Content="All Tasks" Click="TasksButton_OnClick"></Button>
        </StackPanel>
        
        <ContentControl Name="MainContentArea" Grid.Column="1"></ContentControl>
    </Grid>
</Window>
