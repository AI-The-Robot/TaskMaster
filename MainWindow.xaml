<Window x:Class="WPFProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFProject"
        xmlns:userControls="clr-namespace:WPFProject.View.UserControl"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="8*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition Height="8*"></RowDefinition>
            </Grid.RowDefinitions>
            
            <userControls:MenuBar Grid.Row="1"></userControls:MenuBar>
            <TextBlock Grid.Row="0" Text="TASKMASTER" FontSize="23" VerticalAlignment="Center" FontFamily="Jetbrains Mono"
                       FontWeight="Medium"></TextBlock>
        </Grid>
        
        <Rectangle Grid.Column="1" Fill="LightGray"></Rectangle>
    </Grid>
</Window>
