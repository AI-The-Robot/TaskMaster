<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="DataGridStyle" TargetType="{x:Type DataGrid}">
        <Setter Property="Background" Value="#2c3e50"></Setter>
        <Setter Property="Foreground" Value="White"></Setter>
        <Setter Property="BorderBrush" Value="#4d5d6d"></Setter>
        <Setter Property="BorderThickness" Value="1"></Setter>
        <Setter Property="AutoGenerateColumns" Value="False"></Setter>
    </Style>
    
    <Style TargetType="{x:Type DataGridColumnHeader}">
        <Setter Property="Background" Value="#1f2c3d"></Setter>
        <Setter Property="Foreground" Value="#CCCCCC"></Setter>
        <Setter Property="FontWeight" Value="Bold"></Setter>
        <Setter Property="BorderBrush" Value="#4d5d6d"></Setter>
        <Setter Property="BorderThickness" Value="0, 0, 1, 1"></Setter>
        <Setter Property="Padding" Value="5"></Setter>
    </Style>
    
    <Style TargetType="DataGridRow">
        <Setter Property="Background" Value="#34495e"></Setter>
        <Setter Property="Background" Value="#34495e"></Setter>
    </Style>
</ResourceDictionary>